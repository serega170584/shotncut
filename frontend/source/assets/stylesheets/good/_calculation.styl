$ctx = '.si-good-calc'
{$ctx}
  margin-top 3rem

{$ctx}-row
  padding 48px 0
  box-shadow 0 -1px 0 #e5e5e5

  &:last-child
    box-shadow 0 -2px 0 #e5e5e5

  &__caption
    font-weight 500
    font-size 14px
    text-transform uppercase
    opacity (1/3)

{$ctx}-sum
  font-weight 500

  &__label
    color #9d9d9d
    font-size 18px

  &__n
    font-size 30px

.sb-currency
  position relative
  line-height 1

  &::before
    position absolute
    right .3125ex
    bottom .0625ex
    font-size 1.5ex
    content '–'

  &::after
    content ' Р'


{$ctx}-properties
  position relative
  margin-top 28px
  padding 16px 28px
  border 2px solid #f3f3f3
  border-radius 2px

  &__instance
    padding .5rem 0

  &__n
    font-weight 500

  &__name
    font-size 14px
    opacity (1/3)
