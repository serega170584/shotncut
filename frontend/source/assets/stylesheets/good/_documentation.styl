$ctx = '.si-good-doc'

{$ctx}
  position relative
  display block
  font-weight 500
  margin 1.5rem 0 1.5rem
  padding-left 5.625rem
  min-height 5.25rem
  color #1c4d84
  text-decoration underline
  line-height 1.75rem

  &:hover
    color darken(#1c4d84, (1/3)*100%)

  &::before
    sprite(ic_doc)
    position absolute
    top .25rem
    left 0
    content ''
