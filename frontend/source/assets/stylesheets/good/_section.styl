$ctx = '.si-good-section'

{$ctx}
  position relative
  padding 3rem 0

{$ctx}_background_green
  background #009942
  color #fff

{$ctx}_background_grey
  background #f4f4f4

  .si-good-caption__text
    background #f4f4f4

.si-good-section-hero
  margin-top -5rem
  height 100vh
  background-color rgba(66, 81, 78, (1/3))
  background-size cover
  background-blend-mode overlay
  background-position center bottom
  background-repeat no-repeat

  &__overlay
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background #42514e
    opacity 0

  &__content
    position absolute
    top 50%
    margin-top 2.5rem
    transform translate3d(0, -50%, 0)
    color #fff


  &__caption
    font-weight 700
    font-size 4rem

  &__text
    margin 2.25rem 0 2.75rem
    width 42rem
    font-size 1.125rem
    line-height 1.875rem


{$ctx}__anchor
  position absolute
  bottom 1.75rem
  left 50%
  z-index 99
  margin-left -1.5rem
  width 3rem
  height 3rem
  border-radius 50%
  background rgba(#fff, .15)
  transition-timing-function $transition-timing-function
  transition-duration $transition-duration
  transition-property background

  &::before
    sprite(ic_down_white_16px)
    position absolute
    top 50%
    left 50%
    margin-top -.5rem
    margin-left -.5rem
    content ''

  &:hover
    background rgba(#fff, .5)


.si-good-section-video
  padding 8.25rem 0
  background-size cover
  background-blend-mode overlay
  background-position center bottom
  background-repeat no-repeat
  color #fff

  &__text
    margin-bottom 4.5rem
    font-weight 600
    font-size 2.125rem
    line-height 2.875rem

  &__action
    font-weight 500
    font-size 1.125rem

    &::before
      sprite(ic_good_play)
      display inline-block
      margin-right 1.5rem
      content ''
      vertical-align middle


.si-good-slider
  height 25.5rem
  background-color #eee

.si-good-slider-slide
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  padding-top 12rem
  color #fff
  background-position top center
  background-size cover
  background-repeat no-repeat

  .sb-good-blockqoute
    width 45rem

.si-good-slider-tabs
  position relative
  width 45rem
  box-shadow 0 2px 0 rgba(#fff, (1/3))

  .r
    justify-content space-between

  &__link
    position relative
    color #fff
    font-weight 500
    line-height 4.5rem
    text-transform uppercase

    &.si-active
      color #d6e03e

      &::before
        position absolute
        right 0
        bottom -3px
        left 0
        height 4px
        background #d6e03e
        border-radius 2px
        content ''

.sb-good-blockqoute
  &__text
    font-size 1.375rem
    line-height 2.5rem

  &__sign
    margin-top 2.25rem
    font-size 1.125rem
    font-family 'Circe', sans-serif


.si-good-section-update
  position relative
  padding-left 2.5rem
  font-weight 500
  font-size .875rem
  line-height 1.5rem

  &::before
    position absolute
    top 0
    left 0
    sprite(ic-calendar)
    content ''

  &__c
    color #adadad

.si-good-buy-feature
  font-weight 500
  font-size 15px
  line-height 24px

  &__text
    margin-top 24px
    margin-bottom 12px


.si-polis-title
  font-weight 700
  font-size 50px

  &__sentence
    display inline-block
    margin-left 1em
    font-size .5ex
    line-height 1.285714
    opacity .5
