$ctx = '.si-breadcrumbs'
{$ctx}
  margin 32px 0
  font-size .75rem

  @media screen and (max-width: 1199px)
    display none

{$ctx}__item
  position relative
  display inline-block
  margin-left -.25rem
  height 1.5rem
  line-height 1.375rem
  margin-right .75rem
  margin-left -.875rem
  padding-left .75rem
  padding-right .375rem
  border-top 1px solid #dfdfdf
  border-bottom 1px solid #dfdfdf
  &::after
    position absolute
    top -1px
    right -14px
    sprite(si-breadcrumbs__link)
    content ''

  &:first-child
    margin-left 0
    padding-left 0
    border-left 1px solid #dfdfdf
    border-radius 4px 0 0 4px

{$ctx}__link
    display inline-block

{$ctx} > {$ctx}__text
  font-weight 600
{$ctx}__text
  margin-left .75rem
  opacity (2/3)


.si-editor-person
  color #fff
  height 450px
  overflow hidden
  position relative
  border-radius 6px
  background-size cover
  background-color rgba(66, 81, 78, (1/3))
  background-blend-mode overlay
  background-image url('//unsplash.it/2600/1625/?random')

  @media screen and (min-width: 768px) and (max-width: 1199px)
    height 396px

  @media screen and (max-width: 767px)
    height auto
    min-height 268px
    margin-top -20px
    margin-left -20px
    margin-right -20px
    border-radius 0

    .si-socials
      display none

  &::before
    position absolute
    left 0
    top 0
    right 0
    border-radius 6px
    bottom 0
    background-image linear-gradient(0deg, rgba(0,0,0,.75) 0%, rgba(0,0,0,0) 100%)
    content ''
    @media screen and (max-width: 767px)
      border-radius 0


  &__additional
    @media screen and (min-width: 768px)
      margin-top 30px
      padding 30px 0
      box-shadow 0 -1px 0 rgba(#fff, .15)

  &__qoute
    font-style italic
    font-weight 500
    font-size 18px
    line-height 30px
    @media screen and (max-width: 767px)
      font-size 16px
      line-height 24px

.si-editor-person__name
  font-weight 500
  font-size 36px
  line-height 46px

  @media screen and (max-width: 767px)
    font-size 18px
    line-height 24px
    margin-bottom 8px
    font-weight 600

.si-editor-person__content
  position absolute
  right 0
  left 0
  bottom 0
  padding 0 32px

  @media screen and (max-width: 767px)
    padding-left 20px
    padding-right 20px
    padding-bottom 20px

.si-panel
  position relative
  background-color #fff
  border-radius 6px
  overflow hidden
  &_s_s
    padding 8px
  &_s_m
    padding 30px

.si-editor-details
  height 450px
  position relative
  border-radius 6px
  background #fff
  padding 20px 32px

  @media screen and (max-width: 767px)
    margin-left -20px
    margin-right -20px
    border-radius 0
    padding-left 20px
    padding-right 20px

  @media screen and (max-width: 1199px)
    height auto

  &__r
    padding-top 12px
    padding-bottom 12px

    @media screen and (min-width: 768px) and (max-width: 1199px)
      &_data
        width 50%

      &_interests
        position absolute
        right 0
        top 32px
        padding-right 32px
        width 50%
  &__c
    margin-bottom .25rem
    font-size .6875rem
    line-height .75rem
    opacity (1/3)
    text-transform uppercase

  &__d
    line-height 24px


$ctx = '.si-post-card'
{$ctx}
  @extend $overlay
  @extend $background-image
  display block
  position relative
  border-radius 6px
  overflow hidden
  background #fff
  height 560px
  transform translate3d(0, 0, 0)

  &__body
    padding 1.875rem 2.5rem 0
    max-height 16rem
    overflow hidden
    opacity .7
    transition all .3s $transition-timing-function

    ~/_has_author &
      padding-top 3.75rem

  &__author
    display table
    width 100%
    position: absolute
    left: 40px
    top: 224px


    &-avatar
      display table-cell
      width 80px

      > img
        width 80px
        height 80px
        border-radius 50%

    &-name
      display table-cell
      vertical-align bottom
      padding-bottom 8px
      padding-left 16px
      font-size 14px

  &:hover
    {$ctx}__body
      opacity 1

    {$ctx}__caption
      color #009942

    {$ctx}__tag-text
      opacity 1
      transform translate3d(0, 0, 0)

    {$ctx}__tag-icon::before
      transform scale(0)

{$ctx}__accent
  position absolute
  bottom 20px
  right 20px
  color #fff
  z-index 9
  &_type_video
    .si-icon
      sprite(si-post-card-accent-video)
  &_type_gallery
    .si-icon
      sprite(si-post-card-accent-gallery)

{$ctx}__timestamp
  font-weight 500
  font-size 13px
  opacity (1/3)
  text-transform uppercase

{$ctx}__tag
  color #fff
  position absolute
  top 1.875rem
  left 1.875rem
  z-index 9
  line-height 3rem

{$ctx}__tag-icon
  width 48px
  height 48px
  display inline-block
  position relative

  &_category_business-and-jobs::after
    sprite-position(category_business-and-jobs_48px)

  &_category_big-city::after
    sprite-position(category_big-city_48px)

  &_category_family-and-house::after
    sprite-position(category_family-and-house_48px)

  &_category_flourishing-of-life::after
    sprite-position(category_flourishing-of-life_48px)

  &_category_travel-and-adventure::after
    sprite-position(category_travel-and-adventure_48px)

  &::after
  &::before
    content ''

  &::after
    width 48px
    height 48px
    sprite-image()
    sprite-size()
    position absolute
    top 0
    left 0

  &::before
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    border-radius 50%
    background #009942
    opacity 1
    transition all .3s $transition-timing-function

{$ctx}__tag-text
  font-size .75rem
  font-weight 600
  text-transform uppercase
  padding-left .5rem
  opacity 0
  position absolute
  top 0
  left 3rem
  white-space nowrap
  transform translate3d(0, 12px, 0)
  transition all .3s $transition-timing-function



{$ctx}__head
  height 16.5rem
  position relative
  overflow hidden
  transform translate3d(0, 0, 0)
  background-position center

{$ctx}__caption
  margin-bottom 1.125rem
  font-weight 500
  font-size 1.125rem
  line-height 1.5rem
  display block
  transition all .3s $transition-timing-function

{$ctx}__text
  font-size .9375rem
  line-height 1.5rem


{$ctx}__footer
  position absolute
  right 0
  bottom 0
  left 0
  padding 1.5rem 2.5rem 1.5rem


$ctx = '.si-tags'
{$ctx}
  cursor default

{$ctx}__item
  display inline-block
  vertical-align top
  margin .25rem .25rem .25rem 0

{$ctx}__link
  display block
  color #999
  padding 0 .75rem
  border-radius .25rem
  transition all $transition-duration $transition-timing-function

{$ctx}__text
  font-weight 500
  font-size .75rem
  line-height 1.5rem

{$ctx}_theme_dark
  {$ctx}__link
    background #f4f4f4

    &:hover
      color #fff
      background #44994c

{$ctx}_theme_light
  {$ctx}__link
    background #fff

    &:hover
      color #fff
      background #44994c


.si-good-step
  margin-top .75rem

  &__image
    margin 0 0 1.5rem -1rem
    line-height 5.375rem

    img
      vertical-align bottom

  &__text
    font-weight 500
    font-size 1.125rem
    line-height 1.625rem

.sb-good-protect-feature
  line-height 3rem

  &__text
    font-weight 500
    font-size 1.125rem
    line-height 1.5rem
    margin-left 1rem
